@import './quasar.variables'
@import '~quasar-styl'
// @import '~quasar-addon-styl'

html
  font-size 88%
body
  overflow hidden

.top-fix-column
  position sticky
  top 0
  z-index 2

.sticky-header-table
  .q-table__top,
  .q-table__bottom,
  thead tr:first-child th
    background-color #fff
  thead th
    position sticky
    top 0
    opacity 1
    z-index 1

.q-menu
  max-height 450px

.select-input
  min-width 250px

.menu-list
  min-width: 150px

.text-size-xs
  font-size 10px
.text-size-sm
  font-size 11px
.text-size-md
  font-size 12px
.text-size-lg
  font-size 13px
.text-size-xl
  font-size 14px
.text-size-xxl
  font-size 15px

.code-system-popup
  width 550px
  padding-bottom 32px
